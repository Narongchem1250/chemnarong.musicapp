<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/stephen"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JK'"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="30 Followers"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Music enthusiast, producer, and performer."
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Tracks"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_tracks_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- in your activity_main.xml layout file -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewpro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wall1"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recently Listening"
                    android:textColor="@color/white"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/background_color"
                    android:text="Artist / Music"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <!-- Pic1 -->

                <ImageButton
                    android:id="@+id/imageButton1pro"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/jungkook"
                    android:scaleType="fitCenter">

                </ImageButton>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                    <!-- Music title -->
                    <TextView
                        android:id="@+id/tv_music_titlepro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="정국 (Jung Kook) 'Seven"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <!-- Release date -->
                    <TextView
                        android:id="@+id/tv_release_datepro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jungkook"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton2pro"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/stephen"
                    android:scaleType="fitCenter">

                </ImageButton>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                    <!-- Music title -->
                    <TextView
                        android:id="@+id/tv_music_title2pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Until I Found You"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <!-- Release date -->
                    <TextView
                        android:id="@+id/tv_release_date2pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stephen Sanchez"
                        android:textSize="14sp"
                        android:textColor="@color/white" />




                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wall1"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Rate"
                    android:textColor="@color/white"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/background_color"
                    android:text="Most Streaming"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <!-- Pic1 -->

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/jungkook"
                    android:scaleType="fitCenter">

                </ImageButton>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                    <!-- Music title -->
                    <TextView
                        android:id="@+id/tv_music_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="정국 (Jung Kook) 'Seven"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <!-- Release date -->
                    <TextView
                        android:id="@+id/tv_release_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jungkook"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/stephen"
                    android:scaleType="fitCenter">

                </ImageButton>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                    <!-- Music title -->
                    <TextView
                        android:id="@+id/tv_music_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Until I Found You"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <!-- Release date -->
                    <TextView
                        android:id="@+id/tv_release_date2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stephen Sanchez"
                        android:textSize="14sp"
                        android:textColor="@color/white" />



                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>