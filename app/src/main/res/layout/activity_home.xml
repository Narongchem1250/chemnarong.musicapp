<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wall1"
    android:alpha="0.9"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="0dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Music"
            android:textColor="@color/background_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/background_color"
            android:text="Recently Played"
            android:textSize="18sp" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/profilepage"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/stephen"
        android:scaleType="centerCrop">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/background_color"
        android:text="Recently Played:Justin Bieber - Yummy"
        android:textSize="10sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <ImageButton
            android:id="@+id/imageButton3"
            android:background="@drawable/justin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="100dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="New Song"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- in your activity_main.xml layout file -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/wall1"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Rate"
                android:textColor="@color/white"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/background_color"
                android:text="Most Streaming"
                android:textAppearance="?attr/textAppearanceBody2" />

            <!-- Pic1 -->

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/jungkook"
                android:scaleType="fitCenter">

            </ImageButton>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-45dp"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">

                <!-- Music title -->
                <TextView
                    android:id="@+id/tv_music_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정국 (Jung Kook) 'Seven"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!-- Release date -->
                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jungkook"
                    android:textSize="14sp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/stephen"
                android:scaleType="fitCenter">

            </ImageButton>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="-45dp"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">

                <!-- Music title -->
                <TextView
                    android:id="@+id/tv_music_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Until I Found You"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!-- Release date -->
                <TextView
                    android:id="@+id/tv_release_date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stephen Sanchez"
                    android:textSize="14sp"
                    android:textColor="@color/white" />



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>